<Page x:Class="HospitalApp.PageMain.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HospitalApp.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1200"
      Title="Авторизация">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Width="720" Margin="0, 100, 0, 0">
            <TextBlock Text="Введите логин:" FontSize="18" Margin="5, 0, 5, 0" HorizontalAlignment="Center"/>
            <TextBox Name="LoginTxtb" Height="30" Margin="5, 0, 5, 0" Width="250" VerticalContentAlignment="Center"/>
            <TextBlock Text="Введите пароль:" FontSize="18" HorizontalAlignment="Center"/>
            <PasswordBox Name="PasswordPsb"  Height="30" Margin="5, 0, 5, 0" Width="250" VerticalContentAlignment="Center"/>
            <Button Width="150" Height="50" Content="Войти" Margin="0, 10, 0, 10" Style="{StaticResource DefaultButtonStyle}" Name="LoginBtn" Click="LoginBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
